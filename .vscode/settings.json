{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.formatterPath": "nix fmt",
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {
        "ignored": ["unused_binding", "unused_with"]
      },
      "formatting": {
        "command": ["nix fmt"]
      }
    }
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "search.useIgnoreFiles": true
}
